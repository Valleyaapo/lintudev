---
import { projects } from '../data/projects';

const totalProjects = projects.length.toString().padStart(2, '0');
---

<section id="work" class="section container cv-auto">
  <div class="flex justify-between items-baseline mb-16 pb-4 border-b border-border">
    <h2 class="text-2xl font-semibold">Selected Work</h2>
    <span class="font-mono text-text-muted text-sm">
      01 â€” {totalProjects}
    </span>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    {projects.map((project) => (
      <a
        href={`/project/${project.id}`}
        class="tech-card h-[320px] p-8 flex flex-col justify-between relative"
      >
        <div class="flex justify-between mb-auto">
          <span class="font-mono text-primary text-xs border border-border px-2 py-1 rounded">
            {project.category}
          </span>
          <span class="text-text-muted text-sm">{project.year}</span>
        </div>

        <div>
          <h3 class="text-2xl font-bold mb-2">{project.title}</h3>
          <p class="text-text-muted text-base leading-relaxed">{project.description}</p>
        </div>

        <div class="absolute bottom-0 right-0 w-3 h-3 border-b-2 border-r-2 border-text-muted/50 rounded-br-sm"></div>
      </a>
    ))}
  </div>
</section>
