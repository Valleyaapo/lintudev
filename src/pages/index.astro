---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Showcase from '../components/Showcase.astro';
import Process from '../components/Process.astro';
import Services from '../components/Services.astro';
import Contact from '../components/Contact.tsx';

const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Lintu Dev Studio",
  "url": "https://www.lintu.dev",
  "logo": "https://www.lintu.dev/logo.png",
  "contactPoint": {
    "@type": "ContactPoint",
    "email": "hello@lintu.dev",
    "contactType": "customer service"
  },
  "sameAs": [
    "https://github.com/lintudev",
    "https://x.com/lintudev"
  ]
};
---

<Layout title="Lintu Dev Studio">
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
  </Fragment>
  <div class="page-fade-in">
    <Hero />
    <Showcase />
    <Services />
    <Process />
    <Contact client:visible={{ rootMargin: '200px' }} />
  </div>
</Layout>
